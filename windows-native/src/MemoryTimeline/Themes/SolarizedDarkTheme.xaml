<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Solarized Dark Color Palette -->
    <!-- Base colors -->
    <Color x:Key="SolarizedBase03">#FF002B36</Color>
    <Color x:Key="SolarizedBase02">#FF073642</Color>
    <Color x:Key="SolarizedBase01">#FF586E75</Color>
    <Color x:Key="SolarizedBase00">#FF657B83</Color>
    <Color x:Key="SolarizedBase0">#FF839496</Color>
    <Color x:Key="SolarizedBase1">#FF93A1A1</Color>
    <Color x:Key="SolarizedBase2">#FFEEE8D5</Color>
    <Color x:Key="SolarizedBase3">#FFFDF6E3</Color>

    <!-- Accent colors -->
    <Color x:Key="SolarizedYellow">#FFB58900</Color>
    <Color x:Key="SolarizedOrange">#FFCB4B16</Color>
    <Color x:Key="SolarizedRed">#FFDC322F</Color>
    <Color x:Key="SolarizedMagenta">#FFD33682</Color>
    <Color x:Key="SolarizedViolet">#FF6C71C4</Color>
    <Color x:Key="SolarizedBlue">#FF268BD2</Color>
    <Color x:Key="SolarizedCyan">#FF2AA198</Color>
    <Color x:Key="SolarizedGreen">#FF859900</Color>

    <!-- Solarized Dark Theme Brushes -->
    <SolidColorBrush x:Key="SolarizedBackgroundBrush" Color="{StaticResource SolarizedBase03}"/>
    <SolidColorBrush x:Key="SolarizedBackgroundAltBrush" Color="{StaticResource SolarizedBase02}"/>
    <SolidColorBrush x:Key="SolarizedForegroundBrush" Color="{StaticResource SolarizedBase0}"/>
    <SolidColorBrush x:Key="SolarizedForegroundDimBrush" Color="{StaticResource SolarizedBase01}"/>
    <SolidColorBrush x:Key="SolarizedForegroundBrightBrush" Color="{StaticResource SolarizedBase1}"/>
    <SolidColorBrush x:Key="SolarizedAccentBrush" Color="{StaticResource SolarizedCyan}"/>
    <SolidColorBrush x:Key="SolarizedAccentAltBrush" Color="{StaticResource SolarizedBlue}"/>
    <SolidColorBrush x:Key="SolarizedWarningBrush" Color="{StaticResource SolarizedYellow}"/>
    <SolidColorBrush x:Key="SolarizedErrorBrush" Color="{StaticResource SolarizedRed}"/>
    <SolidColorBrush x:Key="SolarizedSuccessBrush" Color="{StaticResource SolarizedGreen}"/>

    <!-- Override system theme brushes for Solarized -->
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{StaticResource SolarizedBase03}"/>
    <SolidColorBrush x:Key="SystemControlPageBackgroundChromeLowBrush" Color="{StaticResource SolarizedBase02}"/>
    <SolidColorBrush x:Key="SystemControlForegroundBaseHighBrush" Color="{StaticResource SolarizedBase0}"/>
    <SolidColorBrush x:Key="SystemControlForegroundBaseMediumBrush" Color="{StaticResource SolarizedBase01}"/>
    <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="{StaticResource SolarizedCyan}"/>

    <!-- Button style for Solarized -->
    <Style x:Key="SolarizedButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SolarizedBackgroundAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SolarizedForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SolarizedForegroundDimBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style x:Key="SolarizedAccentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SolarizedAccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SolarizedBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SolarizedAccentBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- TextBlock styles -->
    <Style x:Key="SolarizedTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SolarizedForegroundBrightBrush}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="SolarizedBodyStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SolarizedForegroundBrush}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="SolarizedCaptionStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SolarizedForegroundDimBrush}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

</ResourceDictionary>
