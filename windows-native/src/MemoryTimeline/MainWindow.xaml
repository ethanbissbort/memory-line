<Window
    x:Class="MemoryTimeline.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Memory Timeline">

    <Grid>
        <NavigationView
            x:Name="NavigationView"
            IsBackButtonVisible="Auto"
            IsSettingsVisible="True"
            PaneDisplayMode="Top"
            SelectionChanged="NavigationView_SelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Timeline" Tag="Timeline" Icon="Calendar">
                    <NavigationViewItem.InfoBadge>
                        <InfoBadge x:Name="TimelineBadge"/>
                    </NavigationViewItem.InfoBadge>
                </NavigationViewItem>
                <NavigationViewItem Content="Recording Queue" Tag="Queue" Icon="Microphone">
                    <NavigationViewItem.InfoBadge>
                        <InfoBadge x:Name="QueueBadge"/>
                    </NavigationViewItem.InfoBadge>
                </NavigationViewItem>
                <NavigationViewItem Content="Review Events" Tag="Review" Icon="Accept">
                    <NavigationViewItem.InfoBadge>
                        <InfoBadge x:Name="ReviewBadge"/>
                    </NavigationViewItem.InfoBadge>
                </NavigationViewItem>
                <NavigationViewItem Content="Connections" Tag="Connections">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE71B;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Search" Tag="Search" Icon="Find"/>
                <NavigationViewItem Content="Analytics" Tag="Analytics">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE9D2;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame">
                <!-- Pages will be navigated here -->
            </Frame>
        </NavigationView>
    </Grid>
</Window>
