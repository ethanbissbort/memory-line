<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MemoryTimeline.Views.ConnectionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MemoryTimeline.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Connections &amp; Insights"
                      Style="{StaticResource TitleTextBlockStyle}"
                      Margin="0,0,0,8"/>
            <TextBlock Text="Discover relationships, similar events, and tag suggestions powered by AI"
                      Style="{StaticResource BodyTextBlockStyle}"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

            <!-- Selected Event Info -->
            <Grid Margin="0,16,0,0"
                  Visibility="{x:Bind ViewModel.HasSelectedEvent, Mode=OneWay}">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel>
                        <TextBlock Text="Analyzing Event:"
                                  Style="{StaticResource CaptionTextBlockStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="{x:Bind ViewModel.SelectedEventTitle, Mode=OneWay}"
                                  Style="{StaticResource SubtitleTextBlockStyle}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Command Bar -->
            <CommandBar DefaultLabelPosition="Right" Margin="0,16,0,0">
                <AppBarButton Icon="Refresh" Label="Refresh" Command="{x:Bind ViewModel.RefreshCommand}"/>
                <AppBarButton Icon="Calculate" Label="Generate Embeddings" Command="{x:Bind ViewModel.GenerateEmbeddingsCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE945;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Loading Overlay -->
            <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Opacity="0.5"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Loading connections..."
                              Margin="0,16,0,0"
                              Style="{StaticResource BodyTextBlockStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Error Message -->
            <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Converter={StaticResource NullToFalseConverter}, Mode=OneWay}"
                    Severity="Error"
                    Title="Error"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    VerticalAlignment="Top"
                    Margin="0,0,0,16"/>

            <!-- Main Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                         Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, ConverterParameter=Invert}">
                <StackPanel Spacing="24">

                    <!-- Empty State -->
                    <Grid Visibility="{x:Bind ViewModel.HasSelectedEvent, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, ConverterParameter=Invert}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0">
                            <FontIcon Glyph="&#xE71B;" FontSize="64" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="No Event Selected"
                                      Style="{StaticResource SubtitleTextBlockStyle}"
                                      Margin="0,16,0,8"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Select an event from the Timeline to view its connections"
                                      Style="{StaticResource BodyTextBlockStyle}"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Similar Events Section -->
                    <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasSelectedEvent, Mode=OneWay}">
                        <Grid>
                            <TextBlock Text="Similar Events" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <FontIcon Glyph="&#xE710;" FontSize="16" Margin="0,0,8,0" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.SimilarEventsCount, Mode=OneWay}"
                                          Style="{StaticResource BodyStrongTextBlockStyle}"
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Grid>

                        <ListView ItemsSource="{x:Bind ViewModel.SimilarEvents, Mode=OneWay}"
                                 SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:SimilarEventDto">
                                    <Grid Padding="12"
                                         Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         CornerRadius="8"
                                         Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{x:Bind Title}"
                                                      Style="{StaticResource BodyStrongTextBlockStyle}"
                                                      TextWrapping="Wrap"/>
                                            <TextBlock Text="{x:Bind StartDateDisplay}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      Margin="0,4,0,0"/>
                                            <TextBlock Text="{x:Bind Description}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      TextWrapping="Wrap"
                                                      MaxLines="2"
                                                      Margin="0,4,0,0"
                                                      Visibility="{x:Bind Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   Margin="16,0,0,0">
                                            <TextBlock Text="{x:Bind SimilarityDisplay}"
                                                      Style="{StaticResource SubtitleTextBlockStyle}"
                                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                      HorizontalAlignment="Right"/>
                                            <TextBlock Text="similarity"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- Cross-References Section -->
                    <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasSelectedEvent, Mode=OneWay}">
                        <Grid>
                            <TextBlock Text="Cross-References" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <FontIcon Glyph="&#xE71B;" FontSize="16" Margin="0,0,8,0" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CrossReferencesCount, Mode=OneWay}"
                                          Style="{StaticResource BodyStrongTextBlockStyle}"
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Grid>

                        <ListView ItemsSource="{x:Bind ViewModel.CrossReferences, Mode=OneWay}"
                                 SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:CrossReferenceDto">
                                    <Grid Padding="12"
                                         Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         CornerRadius="8"
                                         Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                  Text="{x:Bind RelationshipIcon}"
                                                  FontSize="24"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,12,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{x:Bind TargetEventTitle}"
                                                      Style="{StaticResource BodyStrongTextBlockStyle}"
                                                      TextWrapping="Wrap"/>
                                            <TextBlock Text="{x:Bind TargetDateDisplay}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      Margin="0,4,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                       Padding="8,4"
                                                       CornerRadius="4">
                                                    <TextBlock Text="{x:Bind RelationshipTypeDisplay}"
                                                              Style="{StaticResource CaptionTextBlockStyle}"
                                                              Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{x:Bind Reasoning}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      TextWrapping="Wrap"
                                                      Margin="0,8,0,0"
                                                      Visibility="{x:Bind Reasoning, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2"
                                                   VerticalAlignment="Center"
                                                   Margin="16,0,0,0">
                                            <TextBlock Text="{x:Bind ConfidenceDisplay}"
                                                      Style="{StaticResource BodyStrongTextBlockStyle}"
                                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                      HorizontalAlignment="Right"/>
                                            <TextBlock Text="confidence"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- Tag Suggestions Section -->
                    <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasSelectedEvent, Mode=OneWay}">
                        <Grid>
                            <TextBlock Text="Tag Suggestions" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <FontIcon Glyph="&#xE8EC;" FontSize="16" Margin="0,0,8,0" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TagSuggestionsCount, Mode=OneWay}"
                                          Style="{StaticResource BodyStrongTextBlockStyle}"
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Grid>

                        <ItemsControl ItemsSource="{x:Bind ViewModel.TagSuggestions, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:TagSuggestionDto">
                                    <Grid Padding="12"
                                         Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         CornerRadius="8"
                                         Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{x:Bind TagName}"
                                                      Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock Text="{x:Bind Reason}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      Margin="0,4,0,0"
                                                      Visibility="{x:Bind Reason, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   Margin="16,0,0,0">
                                            <TextBlock Text="{x:Bind ConfidenceDisplay}"
                                                      Style="{StaticResource BodyStrongTextBlockStyle}"
                                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                      HorizontalAlignment="Right"/>
                                            <TextBlock Text="confidence"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
